server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      routes:

        - id: order-service
          uri: http://localhost:8081
          predicates:
            - Path=/orders/**
          filters:
            - RewritePath=/orders(?<segment>/?.*), /api/orders${segment}

        - id: inventory-service
          uri: http://localhost:8082
          predicates:
            - Path=/inventory/**
